<?xml version="1.0" encoding="utf-8"?>
<com.zyp.customviewassignment.views.viewpods.ProfileViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zyp.customviewassignment.views.components.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:elevation="1dp"
        app:borderColor="@color/white"
        app:srcCompat="@drawable/avatar_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_profile"
        android:layout_marginTop="-70dp"
        android:background="@drawable/bg_round_layout"
        android:paddingBottom="@dimen/margin_medium_2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="Zachary Bulter"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular_3x"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:text="UI Designer"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_close_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="Closed Tasks"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_regular" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_close_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_close_tasks"
            android:layout_alignStart="@+id/txt_close_tasks"
            android:layout_alignEnd="@+id/txt_close_tasks"
            android:gravity="center"
            android:text="361"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_open_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_close_tasks"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:text="Open Tasks"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_regular" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_open_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_open_tasks"
            android:layout_alignStart="@+id/txt_open_tasks"
            android:layout_alignEnd="@+id/txt_open_tasks"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold" />

    </RelativeLayout>


</com.zyp.customviewassignment.views.viewpods.ProfileViewPod>